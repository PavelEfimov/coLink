{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "frontend",
    "static",
    "dist"
  ]
}
